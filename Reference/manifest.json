{
  "manifest_version": 3,
  "name": "Canvas Ranked",
  "version": "1.0.0",
  "description": "Gamify Canvas! Earn XP for completing assignments.",
  "permissions": [ "storage", "activeTab", "scripting" ],
  "host_permissions": [ "https://*.instructure.com/*" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://*.instructure.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/9175941.png"
    }
  },
  "icons": {
    "128": "images/9175941.png"
  }
}
