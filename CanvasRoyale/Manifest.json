{
    "manifest_version": 3,
    "name": "Canvas Royale",
    "version": "1.0",
    "description": "A web extension for Canvas LMS that gamifies learning with XP and ranks",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.instructure.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.instructure.com/*"],
            "js": ["Content.js"]
        },
        {
            "matches": ["https://*.instructure.com/courses/*/assignments/*"],
            "js": ["bonusXp.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Canvas Royale"
    }
}