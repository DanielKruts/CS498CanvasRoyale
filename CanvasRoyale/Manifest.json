{
    "manifest_version": 3,
    "name": "Canvas Royale",
    "version": "1.0",
    "description": "A web extension for Canvas LMS",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://*.instructure.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["Assets/*.png"],
            "matches": ["https://*.instructure.com/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["https://*.instructure.com/*"],
            "js": ["Content.js","Ranks.js"]
        },
        {
            "matches": [
                "https://*.instructure.com/courses/*/assignments/*"
            ],
            "js": ["bonusXp.js"]
        }
    ]
}